<section class="hero is-danger is-fullheight">
        <!-- Hero head: will stick at the top -->
        <div class="hero-head">
        </div>
      
        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
          <div class="container has-background-light">
            <form class="box">

                <div class="has-text-centered">
                    <h1 class="title is-1 has-text-danger">Create Account</h1>
                </div>

                <br>

                <div class="field">
                  <label class="label has-text-danger">Email</label>
                  <div class="control">
                    <input class="input" type="email" placeholder="e.g. alex@example.com">
                  </div>
                </div>
              
                <div class="field">
                  <label class="label has-text-danger">Password</label>
                  <div class="control">
                    <input class="input" type="password" placeholder="********">
                  </div>
                </div>

                <div class="field">
                    <label class="label has-text-danger">First Name</label>
                    <div class="control">
                      <input class="input" type="text" placeholder="Jane">
                    </div>
                  </div>

                  <div class="field">
                    <label class="label has-text-danger">Last Name</label>
                    <div class="control">
                      <input class="input" type="text" placeholder="Doe">
                    </div>
                  </div>

                  <div class="field">
                    <label class="label has-text-danger">Address</label>
                    <div class="control">
                      <input class="input" type="text" placeholder="123 Main Street">
                    </div>
                  </div>

                  <div class="field">
                    <label class="label has-text-danger">Phone Number</label>
                    <div class="control">
                      <input class="input" type="text" placeholder="(XXX)-XXX-XXXX">
                    </div>
                  </div>
              
                <button class="button is-danger is-centered">Sign in</button>
              </form>
          </div>
        </div>
      
        <!-- Hero footer: will stick at the bottom -->
        <div class="hero-foot">
        </div>
      </section>